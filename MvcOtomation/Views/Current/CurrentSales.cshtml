@using MvcOtomation.Models.Classes
@model List<SalesTransaction>
@{
    ViewBag.Title = "CurrentSales";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2 style="margin-left: 20px">@ViewBag.currentNameBag's Sales</h2>
<br />
<div class="card mb-4">
    <div class="card-header"><i class="fas fa-table mr-1"></i>Sales</div>
    <div class="card-body">
        <div>
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Product</th>
                        <th>Current</th>
                        <th>Price</th>
                        <th>Piece</th>
                        <th>Amount</th>
                        <th>Tarih</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Product.Name</td>
                            <td>@item.Current.Name  @item.Current.Surname</td>
                            <td>@item.UnitPrice</td>
                            <td>@item.Piece</td>
                            <td>@item.Amount</td>
                            <td>@item.Time</td>

                        </tr>
                        

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

