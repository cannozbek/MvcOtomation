@using MvcOtomation.Models.Classes
@model List<Current>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


    <div class="card-header"><i class="fas fa-table mr-1"></i>Current DataTable</div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" >
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Surname</th>
                        <th>City</th>
                        <th>Mail</th>
                        @*<th>Delete</th>*@
                        <th>Update</th>
                    </tr>
                </thead>


                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Surname</td>
                        <td>@item.City</td>
                        <td>@item.Mail</td>
                        <td style="text-align: center"><a href="/Current/DeleteCurrent/@item.Id" style="color: aliceblue" class=" btn btn-danger">Delete</a></td>
                        <td style="text-align: center"><a href="/Current/FetchCurrent/@item.Id" style="color: aliceblue" class="btn btn-success">Update</a></td>
                    </tr>
                    }
                </tbody>
            </table>
            <a href="/Current/AddCurrent">Add Current</a>
        </div>
    </div>

