@using MvcOtomation.Models.Classes
@model List<Category>
    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }


    <div class="card mb-4">
        <div class="card-header"><i class="fas fa-table mr-1"></i>Category DataTable</div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Delete</th>
                            <th>Update</th>
                        </tr>
                    </thead>
                    @*<tfoot>
                            <tr>
                                <th>Name</th>
                                <th>Position</th>
                                <th>Office</th>
                                <th>Age</th>

                            </tr>
                        </tfoot>*@

                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td style="text-align: center" ><a href="/Category/DeleteCategory/@item.Id" style="color: aliceblue" class=" btn btn-danger" >Delete</a></td>
                            <td style="text-align: center"  ><a href="/Category/FetchCategory/@item.Id" style="color: aliceblue" class="btn btn-success">Update</a></td>
                        </tr>
                        }
                    </tbody>
                </table>
                <a href="/Category/AddCategory">Add Category</a>
            </div>
        </div>
    </div>

