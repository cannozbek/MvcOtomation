@model MvcOtomation.Models.Classes.Category
@{
    ViewBag.Title = "Add Category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2 style = "margin-left: 20px" >Add Category</h2>
<br />  
<form method="post" class="form-group" style="margin-left: 20px">
     @*//Category Name*@
    @Html.LabelFor( x => x.Name)
     @Html.TextBoxFor(x => x.Name, new { @class = "form-control",@style = "margin-top: 20px; margin-right: 20px"  } )
    <button class="btn btn-info" style = "margin-top: 20px">Add</button>
</form>

